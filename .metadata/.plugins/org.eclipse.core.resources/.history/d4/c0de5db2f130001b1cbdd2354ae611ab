package br.com.alura.jpa.dao;

import java.math.BigDecimal;
import java.util.List;

import javax.persistence.TypedQuery;

import br.com.alura.jpa.modelo.MediaComData;

public class MovimentacaoDAO extends BaseDAO{
	private String jpql;

	public List<MediaComData> getMediaDiariaDasMovimentacoes() {
		jpql = "select new br.com.alura.jpa.modelo.MediaComData(day(m.data), month(m.data), year(m.data), avg(m.valor)) from Movimentacao m group by day(m.data), month(m.data), year(m.data)";
		TypedQuery<MediaComData> query = getEntityManager().createQuery(jpql, MediaComData.class);
		return query.getResultList();
	}

	public BigDecimal getSoma() {
		jpql = "select sum(m.valor) from Movimentacao m";
		TypedQuery<BigDecimal> query = getEntityManager().createQuery(jpql, BigDecimal.class);
		return query.getSingleResult();
	}
}
